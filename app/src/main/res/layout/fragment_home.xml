<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f9f9fc"
    tools:context=".HomeFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Status:"
        android:id="@+id/title_status"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/abc_primary_text_material_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Payload IP:"
        android:id="@+id/title_home_payloadip"
        android:layout_below="@+id/title_status"
        android:layout_alignStart="@+id/title_status"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/abc_primary_text_material_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Not Avaliable"
        android:id="@+id/value_home_payloadip"
        android:layout_marginLeft="10dp"
        android:textColor="@color/abc_primary_text_material_light"
        android:layout_alignTop="@+id/title_home_payloadip"
        android:layout_toEndOf="@+id/title_home_gcscommip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="GCS comm IP:"
        android:id="@+id/title_home_gcscommip"
        android:layout_marginLeft="10dp"
        android:textColor="@color/abc_primary_text_material_light"
        android:layout_below="@+id/title_home_payloadip"
        android:layout_alignStart="@+id/title_status" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Not Avaliable"
        android:id="@+id/value_home_gcscommip"
        android:textColor="@color/abc_primary_text_material_light"
        android:layout_alignTop="@+id/title_home_gcscommip"
        android:layout_alignStart="@+id/value_home_payloadip" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:id="@+id/button"
        android:layout_toEndOf="@+id/value_home_payloadip"
        android:layout_marginStart="38dp"
        android:layout_below="@+id/title_status"
        android:layout_alignBottom="@+id/value_home_gcscommip"
        android:enabled="false"
        android:visibility="gone" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tggleBtn_home_startPayloadWDService"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="435dp"
        android:checked="false"
        android:text="Start Service" />


</RelativeLayout>


