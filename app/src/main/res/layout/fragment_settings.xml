<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#ffffff"
    tools:context=".SettingsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="GCS Comm IP :"
        android:id="@+id/title_settings_gsccommip"
        android:layout_below="@+id/title_settings"
        android:layout_alignStart="@+id/title_settings"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/abc_primary_text_material_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Settings:"
        android:id="@+id/title_settings"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/abc_primary_text_material_light" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editText_settings_gcscommip"
        android:textSize="@dimen/abc_text_size_small_material"
        android:layout_below="@+id/title_settings"
        android:layout_centerHorizontal="true"
        android:imeOptions="actionDone"
      />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TCP Debug:"
        android:id="@+id/switch1"
        android:checked="false"
        android:minWidth="100dp"
        android:layout_below="@+id/editText_settings_gcscommip"
        android:layout_alignStart="@+id/title_settings_gsccommip"
        android:switchPadding="250dp" />

</RelativeLayout>

