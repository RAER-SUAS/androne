<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <TextView android:text="IP Address: " android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainActivityIPAddressTitle"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="27dp" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton"
        android:layout_above="@+id/mainActivityIPAddressTitle"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="N/A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainActivityIPAddressField"
        android:layout_below="@+id/toggleButton"
        android:layout_toEndOf="@+id/mainActivityIPAddressTitle" />

    <TextView
        android:text="Connection Status:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainActivityConnectionStatusTitle"
        android:layout_below="@+id/mainActivityIPAddressField"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Not Connected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainActivityConnectionStatusField"
        android:layout_below="@+id/mainActivityIPAddressField"
        android:layout_toEndOf="@+id/mainActivityConnectionStatusTitle" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainActivityProgressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start TCP"
        android:id="@+id/mainActivityStartTCPBtn"
        android:layout_alignTop="@+id/mainActivityProgressBar"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
